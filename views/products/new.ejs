<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>

    <form action="/products" method="POST" class="needs-validation mt" novalidate>

        <div>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" required class="form-control">
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please choose a title.
            </div>
        </div>

        <div>
            <label for="price">Price</label>
            <input type="number" name="price" id="price" required class="form-control">
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please choose a price.
            </div>
        </div>

        <label for="description">Description</label>
        <textarea name="description" cols="30" rows="10" id="description" class="form-control"></textarea>
        
        <label for="category">Category</label>
        <input type="text" name="category" id="category" class="form-control">

        <label for="image">Image</label>
        <input type="text" name="image" id="image" class="form-control">

        <button type="submit" class="btn btn-primary">Add item</button>
    </form>

    <script src="/js/script.js"></script>

<%-include('../partials/footer')%>